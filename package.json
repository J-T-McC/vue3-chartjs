{
  "name": "@j-t-mcc/vue3-chartjs",
  "version": "2.1.0",
  "author": "Tyson McCarney <info@tysonmccarney.com> (https://tysonmccarney.com)",
  "description": "Vue3 wrapper for Chart.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/J-T-McC/vue3-chartjs"
  },
  "homepage": "https://github.com/J-T-McC/vue3-chartjs/blob/main/README.md",
  "keywords": [
    "chart.js",
    "vue3"
  ],
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/vue3-chartjs.umd.js",
  "module": "./dist/vue3-chartjs.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue3-chartjs.es.js",
      "require": "./dist/vue3-chartjs.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "eslint lib/** && jest --coverage --preset ts-jest && vite build && vue-tsc --noEmit false",
    "test": "jest --coverage --preset ts-jest",
    "lint": "eslint lib/**"
  },
  "peerDependencies": {
    "chart.js": "^4.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-vue": "^5.0",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^28.1.0",
    "babel-jest": "^28.1.3",
    "chart.js": "^4.4.7",
    "chartjs-plugin-zoom": "^1.2.1",
    "coveralls": "^3.1.1",
    "eslint": "^9.20.1",
    "eslint-plugin-vue": "^9.32.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "2.2.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "vite": "^6.0",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-dts": "^4.5.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
